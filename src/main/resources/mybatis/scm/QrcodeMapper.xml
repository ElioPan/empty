			<trim prefix="count =case" suffix="end,">
				<foreach collection="list" item="item" index="index">
					<if test="item.count!=null">
						when id=#{item.id} then #{item.count}
					</if>
				</foreach>
			</trim>
			<trim prefix="remain_count =case" suffix="end,">
				<foreach collection="list" item="item" index="index">
					<if test="item.remainCount!=null">
						when id=#{item.id} then #{item.remainCount}
					</if>
				</foreach>
			</trim>
			<trim prefix="create_by =case" suffix="end,">
				<foreach collection="list" item="item" index="index">
					<if test="item.createBy!=null">
						when id=#{item.id} then #{item.createBy}
					</if>
				</foreach>
			</trim>
			<trim prefix="create_time =case" suffix="end,">
				<foreach collection="list" item="item" index="index">
