<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ev.custom.dao.MeasurePointTypeDao">

	<select id="get" resultType="com.ev.custom.domain.MeasurePointTypeDO">
		select `id`,`name`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag` from cus_measure_point_type where id = #{value}
	</select>
	
	<select id="getByName" resultType="com.ev.custom.domain.MeasurePointTypeDO">
		select `id`,`name`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag` from cus_measure_point_type where `name` = #{pointTypeName}
	</select>
	
	<select id="list" resultType="com.ev.custom.domain.MeasurePointTypeDO">
		select `id`,`name`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag` from cus_measure_point_type
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="listByDeviceId" resultType="com.ev.custom.domain.MeasurePointTypeDO">
		select 
		type.`id` AS id,
		type.`name` AS name
		FROM cus_measure_point_type type
		LEFT JOIN cus_measure_point point ON point.`child_type`=type.`id`
        <where>  
		  		  <if test="id != null and id != ''"> and type.id = #{id} </if>
		  		  <if test="name != null and name != ''"> and type.name = #{name} </if>
		  		  <if test="deviceId != null and deviceId != ''"> and point.`device_id` = #{deviceId} </if>
		  		</where>
		GROUP BY type.name 		
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from cus_measure_point_type
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.ev.custom.domain.MeasurePointTypeDO" useGeneratedKeys="true" keyProperty="id">
		insert into cus_measure_point_type
		(
			`name`, 
			`create_by`, 
			`create_time`, 
			`update_by`, 
			`update_time`, 
			`del_flag`
		)
		values
		(
			#{name}, 
			#{createBy}, 
			#{createTime}, 
			#{updateBy}, 
			#{updateTime}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.ev.custom.domain.MeasurePointTypeDO">
		update cus_measure_point_type 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from cus_measure_point_type where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from cus_measure_point_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>