	<sql id="sql_column_list">
		`id`,`serial_no`,`name`,`rw_type`,`child_type`,`uom`,`use_type`,`is_manual_input`,`is_virtual_point`,`expression`,`impower`,`format`,`sort_no`,`device_id`,`gateway_id`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag`
	</sql>
	
	<sql id="sql_condition">
		<where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="serialNo != null and serialNo != ''"> and serial_no = #{serialNo}</if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="rwType != null and rwType != ''"> and rw_type = #{rwType} </if>
		  		  <if test="childType != null and childType != ''"> and child_type = #{childType} </if>
		  		  <if test="uom != null and uom != ''"> and uom = #{uom} </if>
		  		  <if test="useType != null and useType != ''"> and use_type = #{useType} </if>
		  		  <if test="isManualInput != null and isManualInput != ''"> and is_manual_input = #{isManualInput} </if>
		  		  <if test="isVirtualPoint != null and isVirtualPoint != ''"> and is_virtual_point = #{isVirtualPoint} </if>
		  		  <if test="expression != null and expression != ''"> and expression = #{expression} </if>
		  		  <if test="impower != null and impower != ''"> and impower = #{impower} </if>
		  		  <if test="format != null and format != ''"> and format = #{format} </if>
		  		  <if test="sortNo != null and sortNo != ''"> and sort_no = #{sortNo} </if>
		  		  <if test="deviceId != null and deviceId != ''"> and device_id = #{deviceId} </if>
			      <if test="gatewayNo != null and gatewayNo != ''"> and gateway.serial_no = #{gatewayNo} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="startTime != null and startTime != ''">  and  DATE_FORMAT(update_time,'%Y-%m-%d') &gt;=  DATE_FORMAT(#{startTime},'%Y-%m-%d')</if>
				  <if test="endTime != null and endTime != ''">  and  DATE_FORMAT(update_time,'%Y-%m-%d') &lt;=  DATE_FORMAT(#{endTime},'%Y-%m-%d')</if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
	</sql>
	
	
	
	<sql id="sql_condition_formap">
		FROM cus_measure_point point 
		LEFT JOIN cus_dictionary drw ON drw.`id` = point.`rw_type`
		LEFT JOIN cus_dictionary dus ON dus.id = point.`use_type`
		LEFT JOIN cus_dictionary dim ON dim.id = point.`impower`
		LEFT JOIN cus_dictionary dfo ON dfo.id = point.`format`
		LEFT JOIN cus_uom uom ON uom.id = point.`uom`
		LEFT JOIN cus_measure_point_type mpt ON mpt.id = point.`child_type`
		LEFT JOIN cus_gateway as gateway ON gateway.id = point.gateway_id
		<where>  
		  		  <if test="id != null and id != ''"> and point.id = #{id} </if>
		  		  <if test="serialNo != null and serialNo != ''"> and point.serial_no LIKE CONCAT(#{serialNo},'%')</if>
		  		  <if test="name != null and name != ''"> and point.name LIKE CONCAT(#{name},'%') </if>
		  		  <if test="rwType != null and rwType != ''"> and point.rw_type = #{rwType} </if>
		  		  <if test="childType != null and childType != ''"> and point.child_type = #{childType} </if>
		  		  <if test="uom != null and uom != ''"> and point.uom = #{uom} </if>
		  		  <if test="useType != null and useType != ''"> and point.use_type = #{useType} </if>
		  		  <if test="isManualInput != null and isManualInput != ''"> and point.is_manual_input = #{isManualInput} </if>
		  		  <if test="isVirtualPoint != null and isVirtualPoint != ''"> and point.is_virtual_point = #{isVirtualPoint} </if>
		  		  <if test="expression != null and expression != ''"> and point.expression = #{expression} </if>
		  		  <if test="impower != null and impower != ''"> and point.impower = #{impower} </if>
		  		  <if test="format != null and format != ''"> and point.format = #{format} </if>
		  		  <if test="sortNo != null and sortNo != ''"> and point.sort_no = #{sortNo} </if>
		  		  <if test="deviceId != null and deviceId != ''"> and point.device_id = #{deviceId} </if>
			      <if test="gateWayNo != null and gateWayNo != ''"> and point.device_id = #{deviceId} </if>
		  		  <if test="createBy != null and createBy != ''"> and point.create_by = #{createBy} </if>
		  		  <if test="createTime != null and createTime != ''"> and point.create_time = #{createTime} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and point.update_by = #{updateBy} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and point.update_time = #{updateTime} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and point.del_flag = #{delFlag} </if>
		  		  AND point.del_flag = 0
		  		</where>
	</sql>
	
	<sql id="sql_order">
		<choose>
	            <when test="sort != null and sort.trim() != ''">
	                order by ${sort} ${order}
	            </when>
				<otherwise>
	                order by `sort_no` desc,id desc
				</otherwise>
	        </choose>
			<if test="offset != null and limit != null">
				limit #{offset}, #{limit}
			</if>
	</sql>
	
</mapper>