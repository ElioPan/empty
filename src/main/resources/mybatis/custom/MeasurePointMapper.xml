<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ev.custom.dao.MeasurePointDao">

	<select id="get" resultType="com.ev.custom.domain.MeasurePointDO">
		SELECT 
		<include refid="sql_column_list"/>  
		FROM cus_measure_point 
		WHERE id = #{value}
	</select>

	<select id="list" resultType="com.ev.custom.domain.MeasurePointDO">
		SELECT 
		<include refid="sql_column_list"/>
		FROM cus_measure_point
		<include refid="sql_condition"/>
		<include refid="sql_order"/>
	</select>
	
	<select id="listGroupByDevice" resultType="com.ev.custom.domain.MeasurePointDO">
		SELECT 
		<include refid="sql_column_list"/>
		FROM cus_measure_point
		<include refid="sql_condition"/>
		GROUP BY `device_id`
		<include refid="sql_order"/>
	</select>
	
	<select id="listForMap" resultType="map">
		SELECT
		point.`id` AS id,
		point.`serial_no` AS serialNo,
		point.`name` AS pointName,
		drw.`id` AS rwTypeId,
		drw.`name` AS rwTypeName,
		mpt.`id` AS childTypeId,
		mpt.`name` AS childTypeName,
		uom.`id` AS uomId,
		uom.`name` AS uomName,
		dus.`id` AS useTypeId,
		dus.`name` AS useTypeName,
		point.`is_manual_input` AS isManualInput,
		dim.`id` AS impowerTypeId,
		dim.`name` AS impowerTypeName,
		dfo.`id` AS formatTypeId,
		point.`sort_no` AS sortNo,
		dfo.`name` AS formatTypeName,
		gateway.id as gatewayId,
		gateway.`name` as gatewayName,
		gateway.serial_no as gatewayNo
		<include refid="sql_condition_formap"/>
		<choose>
	            <when test="sort != null and sort.trim() != ''">
	                order by ${sort} ${order}
	            </when>
				<otherwise>
	                order by point.`sort_no` desc,point.id desc
				</otherwise>
	        </choose>
			<if test="offset != null and limit != null">
				limit #{offset}, #{limit}
			</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from cus_measure_point
		<include refid="sql_condition"/>
	</select>
	
	<select id="countForMap" resultType="int">
		SELECT 
		COUNT(*)
		<include refid="sql_condition_formap"/>
	</select>

    <select id="listForDevice" resultType="java.util.Map">
		SELECT
		device.`id`,
		device.serialno,
		device.type AS typeId,
		dic.name AS `type`,
		device.`name`
		FROM
		cus_measure_point point
		LEFT JOIN cus_device device ON device.id=point.device_id
		LEFT JOIN cus_dictionary dic ON dic.id=device.type

		<where>
			<if test="id != null and id != ''"> and device.id = #{id} </if>
			<if test="serialNo != null and serialNo != ''"> and device.serialno LIKE CONCAT('%',#{serialNo},'%')</if>
			<if test="name != null and name != ''"> and device.name LIKE CONCAT('%',#{name},'%') </if>
			<if test="deviceId != null and deviceId != ''"> and device.`id` = #{deviceId} </if>
		</where>
		GROUP BY device_id
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by device.id DESC
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

    <insert id="save" parameterType="com.ev.custom.domain.MeasurePointDO" useGeneratedKeys="true" keyProperty="id">
		insert into cus_measure_point
		(
			`serial_no`, 
			`name`, 
			`rw_type`, 
			`child_type`, 
			`uom`, 
			`use_type`, 
			`is_manual_input`, 
			`is_virtual_point`, 
			`expression`, 
			`impower`, 
			`format`, 
			`sort_no`, 
			`device_id`,
			`gateway_id`,
			`create_by`, 
			`create_time`, 
			`update_by`, 
			`update_time`, 
			`del_flag`
		)
		values
		(
			#{serialNo}, 
			#{name}, 
			#{rwType}, 
			#{childType}, 
			#{uom}, 
			#{useType}, 
			#{isManualInput}, 
			#{isVirtualPoint}, 
			#{expression}, 
			#{impower}, 
			#{format}, 
			#{sortNo}, 
			#{deviceId},
			#{gatewayId},
			#{createBy}, 
			#{createTime}, 
			#{updateBy}, 
			#{updateTime}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.ev.custom.domain.MeasurePointDO">
		update cus_measure_point 
		<set>
			<if test="serialNo != null">`serial_no` = #{serialNo}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="rwType != null">`rw_type` = #{rwType}, </if>
			<if test="childType != null">`child_type` = #{childType}, </if>
			<if test="uom != null">`uom` = #{uom}, </if>
			<if test="useType != null">`use_type` = #{useType}, </if>
			<if test="isManualInput != null">`is_manual_input` = #{isManualInput}, </if>
			<if test="isVirtualPoint != null">`is_virtual_point` = #{isVirtualPoint}, </if>
			<if test="expression != null">`expression` = #{expression}, </if>
			<if test="impower != null">`impower` = #{impower}, </if>
			<if test="format != null">`format` = #{format}, </if>
			<if test="sortNo != null">`sort_no` = #{sortNo}, </if>
			<if test="deviceId != null">`device_id` = #{deviceId}, </if>
			<if test="gatewayId != null">`gateway_id` = #{gatewayId}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from cus_measure_point where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from cus_measure_point where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
