	<select id="list" resultType="com.ev.custom.domain.SparePartDO">
		select `id`,`code`,`name`,`type`,`spart_type`,`unit`,`price`,`warehouse`,`location_id`,`dept_id`,`desc`,`amount`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag` from cus_spare_part
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="code != null and code != ''"> and code = #{code} </if>
			<if test="name != null and name != ''"> and name = #{name} </if>
			<if test="type != null and type != ''"> and type = #{type} </if>
			<if test="spartType != null and spartType != ''"> and spart_type = #{spartType} </if>
			<if test="unit != null and unit != ''"> and unit = #{unit} </if>
			<if test="price != null and price != ''"> and price = #{price} </if>
			<if test="warehouse != null and warehouse != ''"> and warehouse = #{warehouse} </if>
			<if test="locationId != null and locationId != ''"> and location_id = #{locationId} </if>
			<if test="deptId != null and deptId != ''"> and dept_id = #{deptId} </if>
			<if test="desc != null and desc != ''"> and desc = #{desc} </if>
			<if test="amount != null and amount != ''"> and amount = #{amount} </if>
			<if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
			<if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
			<if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
			<if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
			<if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		</where>
