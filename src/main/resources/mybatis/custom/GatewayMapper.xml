<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ev.custom.dao.GatewayDao">

	<select id="get" resultType="com.ev.custom.domain.GatewayDO">
		SELECT 
		<include refid="sql_column_list"/> 
		FROM cus_gateway 
		WHERE id = #{value}
	</select>

	<select id="list" resultType="com.ev.custom.domain.GatewayDO">
		SELECT   
		<include refid="sql_column_list"/>
        <include refid="sql_condition"/>
        <include refid="sql_order"/>
	</select>
	
	<select id="listForMap" resultType="map">
		SELECT 
		<include refid="sql_column_list"></include>
        <include refid="sql_condition"/>
        <include refid="sql_order"/>
	</select>
	
 	<select id="count" resultType="int">
		SELECT 
		COUNT(*)
		<include refid="sql_condition"/>
	</select>
	 
	<insert id="save" parameterType="com.ev.custom.domain.GatewayDO" useGeneratedKeys="true" keyProperty="id">
		insert into cus_gateway
		(
			`serial_no`, 
			`name`, 
			`model`, 
			`manufacturers`, 
			`setup_time`, 
			`create_by`, 
			`create_time`, 
			`update_by`, 
			`update_time`, 
			`del_flag`
		)
		values
		(
			#{serialNo}, 
			#{name}, 
			#{model}, 
			#{manufacturers}, 
			#{setupTime}, 
			#{createBy}, 
			#{createTime}, 
			#{updateBy}, 
			#{updateTime}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.ev.custom.domain.GatewayDO">
		update cus_gateway 
		<set>
			<if test="serialNo != null">`serial_no` = #{serialNo}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="model != null">`model` = #{model}, </if>
			<if test="manufacturers != null">`manufacturers` = #{manufacturers}, </if>
			<if test="setupTime != null">`setup_time` = #{setupTime}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from cus_gateway where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from cus_gateway where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<sql id="sql_column_list">
		`id`,`serial_no`,`name`,`model`,`manufacturers`,`setup_time`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag`
	</sql>
	
	<sql id="sql_condition">
		from cus_gateway
		<where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="serialNo != null and serialNo != ''"> and serial_no = #{serialNo} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="model != null and model != ''"> and model = #{model} </if>
		  		  <if test="fuzzySearch != null and fuzzySearch != ''"> and CONCAT(serial_no,name) LIKE CONCAT(CONCAT('%',#{fuzzySearch}),'%')</if>
		  		  <if test="manufacturers != null and manufacturers != ''"> and manufacturers = #{manufacturers} </if>
		  		  <if test="setupTime != null and setupTime != ''"> and setup_time = #{setupTime} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		   AND del_flag = 0
		  		</where>
	</sql>
	
	<sql id="sql_order">
		<choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</sql>
	
	
</mapper>