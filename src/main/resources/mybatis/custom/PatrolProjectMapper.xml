<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ev.custom.dao.PatrolProjectDao">

	<select id="get" resultType="com.ev.custom.domain.PatrolProjectDO">
		select `id`,`code`,`name`,`function`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag` from cus_patrol_project where id = #{value}
	</select>

	<select id="getByCode" resultType="com.ev.custom.domain.PatrolProjectDO">
		select `id`,`code`,`name`,`function`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag` from cus_patrol_project where code = #{value}
	</select>

	<select id="getByName" resultType="com.ev.custom.domain.PatrolProjectDO">
		select `id`,`code`,`name`,`function`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag` from cus_patrol_project where name = #{value}
	</select>

	<select id="list" resultType="com.ev.custom.domain.PatrolProjectDO">
		select `id`,`code`,`name`,`function` from cus_patrol_project
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
			<if test="maxNo != null and maxNo != ''"> and LEFT(`code`,CHAR_LENGTH(#{maxNo})) = #{maxNo} </if>

			<if test="code != null and code != ''"> and code = #{code} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="function != null and function != ''"> and function = #{function} </if>
		  		  <if test="fuzzySearch != null and fuzzySearch != ''"> and CONCAT(name,function) LIKE CONCAT('%',CONCAT(#{fuzzySearch},'%')) </if>
				  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
				  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
				  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
				  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
				  <if test="delFlag != null"> and del_flag = #{delFlag} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from cus_patrol_project
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="code != null and code != ''"> and code = #{code} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="function != null and function != ''"> and function = #{function} </if>
		  		  <if test="fuzzySearch != null and fuzzySearch != ''"> and CONCAT(name,function) LIKE CONCAT('%',CONCAT(#{fuzzySearch},'%')) </if>
				  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
				  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
				  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
				  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
				  <if test="delFlag != null"> and del_flag = #{delFlag} </if>	
				   AND del_flag = 0
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.ev.custom.domain.PatrolProjectDO" useGeneratedKeys="true" keyProperty="id">
		insert into cus_patrol_project
		(
			`code`, 
			`name`, 
			`function`, 

			`create_by`, 

			`create_time`, 

			`update_by`, 

			`update_time`, 

			`del_flag`
		)
		values
		(
			#{code}, 
			#{name}, 
			#{function}, 

			#{createBy}, 

			#{createTime}, 

			#{updateBy}, 

			#{updateTime}, 

			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.ev.custom.domain.PatrolProjectDO">
		update cus_patrol_project 
		<set>
			<if test="code != null">`code` = #{code}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}, </if>
			<if test="function != null">`function` = #{function}</if>
		</set>
		where id = #{id}
	</update>
	
	<update id="batchRemoveProject">
		update cus_patrol_project 
		SET del_flag = 1
		where id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>
	
	<delete id="remove">
		delete from cus_patrol_project where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from cus_patrol_project where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>