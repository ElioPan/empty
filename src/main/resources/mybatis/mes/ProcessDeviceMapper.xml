<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ev.mes.dao.ProcessDeviceDao">

	<select id="get" resultType="com.ev.mes.domain.ProcessDeviceDO">
		SELECT 
		<include refid="sql_column_list"/>  
		FROM mes_process_device 
		WHERE id = #{value}
	</select>

	<select id="list" resultType="com.ev.mes.domain.ProcessDeviceDO">
		SELECT 
		<include refid="sql_column_list"/>
		FROM mes_process_device
		<include refid="sql_condition"/>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from mes_process_device
		<include refid="sql_condition"/>
	</select>
	 
	<insert id="save" parameterType="com.ev.mes.domain.ProcessDeviceDO" useGeneratedKeys="true" keyProperty="id">
		insert into mes_process_device
		(
			`process_id`, 
			`code`, 
			`device_id`, 
			`operation_time`, 
			`man_hour`, 
			`remark`, 
			`create_by`, 
			`create_time`, 
			`update_by`, 
			`update_time`, 
			`del_flag`
		)
		values
		(
			#{processId}, 
			#{code}, 
			#{deviceId}, 
			#{operationTime}, 
			#{manHour}, 
			#{remark}, 
			#{createBy}, 
			#{createTime}, 
			#{updateBy}, 
			#{updateTime}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.ev.mes.domain.ProcessDeviceDO">
		update mes_process_device 
		<set>
			<if test="processId != null">`process_id` = #{processId}, </if>
			<if test="code != null">`code` = #{code}, </if>
			<if test="deviceId != null">`device_id` = #{deviceId}, </if>
			<if test="operationTime != null">`operation_time` = #{operationTime}, </if>
			<if test="manHour != null">`man_hour` = #{manHour}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from mes_process_device where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from mes_process_device where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<sql id="sql_column_list">
		`id`,`process_id`,`code`,`device_id`,`operation_time`,`man_hour`,`remark`,`create_by`,`create_time`,`update_by`,`update_time`,`del_flag`	
	</sql>
	
	<sql id="sql_condition">
		<where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="processId != null and processId != ''"> and process_id = #{processId} </if>
		  		  <if test="code != null and code != ''"> and code = #{code} </if>
		  		  <if test="deviceId != null and deviceId != ''"> and device_id = #{deviceId} </if>
		  		  <if test="operationTime != null and operationTime != ''"> and operation_time = #{operationTime} </if>
		  		  <if test="manHour != null and manHour != ''"> and man_hour = #{manHour} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateBy != null and updateBy != ''"> and update_by = #{updateBy} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
	</sql>


	<delete id="removeByProcessId">
		delete from mes_process_device where id = #{value}
	</delete>


</mapper>