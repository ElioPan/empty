			<if test="type != null">`type` = #{type}, </if>
			<if test="code != null">`code` = #{code}, </if>
			<if test="version != null">`version` = #{version}, </if>
			<if test="alterationContent != null">`alteration_content` = #{alterationContent}, </if>
