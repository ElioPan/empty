<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ev.system.dao.UserGroupDao">

	<select id="get" resultType="com.ev.system.domain.UserGroupDO">
		select `id`,`user_id`,`group_id` from sys_user_group where id = #{value}
	</select>

	<select id="list" resultType="com.ev.system.domain.UserGroupDO">
		select `id`,`user_id`,`group_id` from sys_user_group
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="groupId != null and groupId != ''"> and group_id = #{groupId} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_user_group
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="groupId != null and groupId != ''"> and group_id = #{groupId} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.ev.system.domain.UserGroupDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_user_group
		(
			`user_id`, 
			`group_id`
		)
		values
		(
			#{userId}, 
			#{groupId}
		)
	</insert>
	 
	<update id="update" parameterType="com.ev.system.domain.UserGroupDO">
		update sys_user_group 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="groupId != null">`group_id` = #{groupId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from sys_user_group where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_user_group where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<delete id="removeByUserId">
		delete from sys_user_group where user_id=#{userId}
	</delete>

	<insert id="batchSave">
		INSERT INTO sys_user_group(user_id, group_id) values
		<foreach item="item" index="index" collection="list"
				 separator=",">
			(#{item.userId},#{item.groupId})
		</foreach>
	</insert>

	<select id="listGroupId" resultType="long">
		select group_id from
		sys_user_group where
		user_id=#{userId}
	</select>

	<delete id="batchRemoveByUserId">
		delete from sys_user_group where user_id in
		<foreach item="id" collection="array" open="(" separator=","
				 close=")">
			#{id}
		</foreach>
	</delete>

</mapper>