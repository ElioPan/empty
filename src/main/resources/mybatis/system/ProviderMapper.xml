<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ev.system.dao.ProviderDao">

	<select id="get" resultType="com.ev.system.domain.ProviderDO">
		select `id`,`name`,`remark`,`create_time` from sys_provider where id = #{value}
	</select>

	<select id="list" resultType="com.ev.system.domain.ProviderDO">
		select `id`,`name`,`remark`,`create_time` from sys_provider
        <where>  
		  <if test="id != null and id != ''"> and id = #{id} </if>
		  <if test="name != null and name != ''"> and name = #{name} </if>
		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_provider
		 <where>  
		  <if test="id != null and id != ''"> and id = #{id} </if>
		  <if test="name != null and name != ''"> and name = #{name} </if>
		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.ev.system.domain.ProviderDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_provider
		(
			`name`, 

			`remark`, 

			`create_time`, 

		)
		values
		(
			#{name}, 

			#{remark}, 

			#{createTime}, 

		)
	</insert>
	 
	<update id="update" parameterType="com.ev.system.domain.ProviderDO">
		update sys_provider 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from sys_provider where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_provider where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>